<div class = "row post_index">

  <ul class ="row my_user_post">
      <li><% @user.posts.each do |post| %></li>
  </ul>
 

  <div class = "row post_field">

    <div class = "col-6 title_field">
      <p>レシピ名: <%= post.title %></p>
      <p><%= image_tag post.cooking_image.url, width: '100px', height: '100px' %></p> 
      <p>投稿者: <%= link_to post.user.name, user_path(post.user.id) %></p>
    </div>

    <div class = "col-6 title_field">
      <div class = "row content_field">
        <% post.materials.first(3).each_with_index do |t| %>
          <li class = "col-sm-6 col-md-6"><%= t.material %></li>
          <li class = "col-sm-6 col-md-6"><%= t.amount %></li>       
        <% end %>
      </div>
      <div class = "title_menu">
        <li><%= link_to '詳細を見る', post %></li>
        <% if post.user_id == current_user.id %>
          <li><%= link_to '編集', edit_post_path(post) %></li>
          <li><%= link_to '削除', post, method: :delete, data: { confirm: '本当に削除しますか?' } %></li>
        <% end %>
      </div>
    </div>
  </div>

  <% end%>
      
      

    </div>
  </div>
</div>
