<div class = "row post_index">

  <ul class ="row my_user_post">
    <li><% @user.favorites.each do |f| %></li>
  </ul>
 

  <div class = "row post_field">
    
    <div class = "col-6 title_field">
      <p>レシピ名: <%= f.post.title %></p>
      <p><%= image_tag f.post.cooking_image.url, width: '100px', height: '100px' %></p> 
      <p>投稿者: <%= link_to f.post.user.name, user_path(f.post.user.id) %></p>
    </div>

    <div class = "col-6 title_field">
      <div class = "row content_field">
        <% f.post.materials.first(5).each_with_index do |t| %>
          <li class = "col-sm-6 col-md-6"><%= t.material %></li>
          <li class = "col-sm-6 col-md-6"><%= t.amount %></li>       
        <% end %>
      </div>
      <div class = "title_menu">
        <li><%= link_to '詳細を見る', f.post %></li>
      </div>
    </div>
  </div>
  <% end%>
      
      

</div>
