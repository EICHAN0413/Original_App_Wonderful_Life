

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

<div class= 'row'>

<div class='offset-1 col-4 bg-form'>

  <div class="col-12 field ">
    <h2>他アカウントを利用<br><br></h2>
  </div>

  <div class="col-12 field omniauth-field">
    <%= link_to 'Googleアカウントでログイン', user_google_omniauth_authorize_path, method: :post, class: "btn btn-outline-primary" %>
  </div>

  <div class="col-12 field omniauth-field">
    <%= link_to 'Twitterアカウントでログイン', user_twitter_omniauth_authorize_path, method: :post, class: "btn btn-outline-primary" %>
  </div>

  <div class="col-12 field omniauth-field">
    <%= link_to 'facebookアカウントでログイン', user_facebook_omniauth_authorize_path, method: :post, class: "btn btn-outline-primary" %>
  </div>

</div>

<div class ='offset-2 col-4 bg-form'>

  <div class="col-12 field">
    <h2>新規登録</h2>
  </div>

  <div class="col-12 field">
    <%= f.label :name, "名前" %> <br />
    <%= f.text_field :name %>
  </div>
  
  <div class="col-12 field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="col-12 field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>文字以上で入力してください)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="col-12 field">
    <%= f.label :password_confirmation, "パスワード(確認用)" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="col-12 field">
    <p><%= f.submit  %></p>
  </div>
  
</div>

</div>
<% end %>
