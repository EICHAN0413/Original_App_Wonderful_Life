<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <div class ="error">
    <%= render "devise/shared/error_messages", resource: resource %>
  </div>
  
  
  <div class ="row mypage_form">
    <h2 class = col-12>マイページ編集画面</h2>
  </div>

  <div class ="field">
    <p>アバター画像</p>
    <p><%= f.file_field :avatar%></p>
  </div>
          
  <div class = 'field'>
    <p class ='col-12'>ユーザ名 <%= f.text_field :name %></p>
    <p class ='col-12'>誕生日 <%= f.date_select :birth_date, start_year: 1930, end_year: (Time.now.year), default: Date.new(2000, 1, 1) %></p>
    <p class ='col-12'>非公開設定 <%= f.check_box :public_or_private %></p>
  </div>
  
  <div class ="field">
    <p>プロフィール</p>
    <p><%= f.text_area :profile, :size => "50*50"	%></p>
  </div>

  
  <div class="field">
    <%= f.label :password %> <i>( パスワードを変更しない場合は空白にしてください)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
    <br />
    <em><%= @minimum_password_length %> 文字以上で入力してください</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(変更するには現在のパスワードが必要です)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class ="field">
    <div class="actions">
      <%= f.submit "更新" %>
    </div>
  </div>

    

<% end %>

<div class ="field">
  <h3>アカウント削除</h3>
  <p>本当に削除しますか？<%= button_to "アカウント削除", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
</div>

  



