<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Material</th>
      <th>Amount</th>
      <th>Procedure</th>
      <th>Cooking image</th>
      <th>Procedure image</th>
      <th>Tag</th>
      <th>Text</th>
      <th>Free text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.material %></td>
        <td><%= post.amount %></td>
        <td><%= post.procedure %></td>
        <td><%= post.cooking_image %></td>
        <td><%= post.procedure_image %></td>
        <td><%= post.tag %></td>
        <td><%= post.text %></td>
        <td><%= post.free_text %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
