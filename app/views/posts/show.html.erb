<% unless @post.user_id == current_user.id %>
  <% if @favorite.present? %>
    <%= link_to 'お気に入り解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'お気に入りする', favorites_path(post_id: @post.id), method: :post, class: 'btn btn-primary' %>
  <% end %>
<% end %>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
  <% @post.cooking_images.each do |post| %>
   <%= image_tag (post.url) %>
  <% end %>
</p>

<p>
  <strong>材料</strong>
  <% %>
</p>

<p>
  <strong>Procedure:</strong>
  <%= @post.procedure %>
  <% @post.procedure_images.each do |post| %>
   <%= image_tag (post.url) %>
  <% end %>
</p>


<p>
  <strong>Tag:</strong>
  <%= @post.tag %>
</p>

<p>
  <strong>Text:</strong>
  <%= @post.text %>
</p>

<p>
  <strong>Free text:</strong>
  <%= @post.free_text %>
</p>

<p>コメント一覧</p>
  <div id="comments_area">
    <%= render partial: 'comments/index', locals: { comments: @comments, post: @post } %>
  </div>
  <%= render partial: 'comments/form', locals: { comment: @comment, post: @post } %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
