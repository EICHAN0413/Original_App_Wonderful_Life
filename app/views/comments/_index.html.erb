    <% if comment.id.present? %>
        <div class="comment-content" id ="this_comment_<%= comment.id %>"></div>
        <div class = "row comment_index">
          <div class = "col-12"><%= comment.content %></div>
        </div>
        <div class= "offset-9 row">
          <% if current_user.id == comment.user.id%>
            <%= link_to "編集", edit_post_comment_path(post, comment), remote: true %>
