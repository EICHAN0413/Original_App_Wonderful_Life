<div class = "row all_comments">
  <% comments.each do |comment| %>
    <% if comment.id.present? %>
        <div class="comment-content" id ="this_comment_<%= comment.id %>"></div>
        <div class = "comment_index">
          <%= comment.content %>
          <%= link_to "編集", edit_post_comment_path(post, comment), remote: true %>
          <%= link_to "削除", post_comment_path(comment.post_id, comment.id), method: :delete, remote: true, data: { confirm: "本当に削除しますか?"} %>
        </div>
    <% end %>
  <% end %>
</div>